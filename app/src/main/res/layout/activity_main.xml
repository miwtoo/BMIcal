<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/hdbackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/banner" />

    <RelativeLayout
        android:layout_below="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:src="@drawable/opacity"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:fontFamily="Chaparral Pro"
            android:textSize="35dp"
            android:layout_marginTop="47dp"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/et1"
            android:layout_toStartOf="@+id/et1"
            android:layout_marginRight="42dp"
            android:layout_marginEnd="42dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/et1"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Kg"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:fontFamily="Chaparral Pro"
            android:textSize="35dp"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/et2"
            android:hint="Cm"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/et1"
            android:layout_alignStart="@+id/et1" />

        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Calculate"
            android:id="@+id/ib1"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:background="#0cff00"
            android:textSize="20dp"
            android:textColor="#000000" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv4"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>